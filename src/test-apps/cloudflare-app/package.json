{
  "name": "cloudflare-app",
  "private": true,
  "repository": "github:aydrian/itsaydrian.com",
  "license": "MIT",
  "author": "Aydrian Howard <aydrian@gmail.com> (https://itsaydrian.com)",
  "sideEffects": false,
  "type": "module",
  "scripts": {
    "build": "remix build",
    "build:icons": "tsx build-icons.ts",
    "compile": "node ./scripts/mdx/compile-mdx.js ",
    "content:watch": "node ./scripts/watch-content.js",
    "dev": "remix dev --manual -c \"npm run start\"",
    "lint": "eslint --cache --cache-location ./node_modules/.cache/eslint .",
    "lint:fix": "eslint --fix --cache --cache-location ./node_modules/.cache/eslint .",
    "start": "wrangler pages dev --kv CONTENT --compatibility-flags=\"nodejs_compat\" --compatibility-date=2023-06-21 ./public",
    "typecheck": "tsc"
  },
  "eslintIgnore": [
    "/node_modules",
    "/functions",
    "/public/build"
  ],
  "dependencies": {
    "@radix-ui/react-avatar": "^1.0.4",
    "@radix-ui/react-icons": "^1.3.0",
    "@remix-run/cloudflare": "2.0.1",
    "@remix-run/cloudflare-pages": "2.0.1",
    "@remix-run/css-bundle": "2.0.1",
    "@remix-run/react": "2.0.1",
    "chokidar": "^3.5.3",
    "class-variance-authority": "^0.7.0",
    "clsx": "^2.0.0",
    "isbot": "^3.7.0",
    "mdx-bundler": "^9.2.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "reading-time": "^1.5.0",
    "remix-params-helper": "^0.4.10",
    "remix-typedjson": "^0.3.0",
    "tailwind-merge": "^1.14.0",
    "tailwindcss-animate": "^1.0.7",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20231010.0",
    "@remix-run/dev": "2.0.1",
    "@remix-run/eslint-config": "2.0.1",
    "@sly-cli/sly": "^1.4.10",
    "@types/react": "^18.2.28",
    "@types/react-dom": "^18.2.13",
    "autoprefixer": "^10.4.16",
    "eslint": "^8.51.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-perfectionist": "^2.1.0",
    "glob": "^10.3.10",
    "node-html-parser": "^6.1.10",
    "prettier": "^3.0.3",
    "prettier-plugin-tailwindcss": "^0.5.6",
    "remix-development-tools": "^3.2.2",
    "remix-flat-routes": "^0.6.1",
    "tailwindcss": "^3.3.3",
    "tsx": "^3.13.0",
    "typescript": "^5.2.2",
    "wrangler": "^3.13.1"
  },
  "engines": {
    "node": ">=18.16.0"
  }
}